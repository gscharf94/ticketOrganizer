extends layout.pug

block style
  link(rel="stylesheet" href="/stylesheets/index.css")


block content
  table#jobTable.nonResponseTable
    thead 
      tr 
        th Name 
        th City 
        th Client
        th Estimated Footage
        th # of tickets
        th % tickets clear
    tbody 
      each job in jobs 
        tr
         td 
          a(href=`jobDetail/${job.id}`) #{job.job_name}
         td #{job.city}
         td 
          a(href=`clientDetail/${job.client_id}`) #{job.client_name}
         td= `${job.estimated_footage_formatted}`
         td #{job.ticket_count}
         - let canvContainerId = `canvasContainer${job.id}`;
         td(id=canvContainerId).canvasContainer= `${job.percent_clear}%`

block scripts
  script(src="/scripts/indexScript.js")